{
  "name": "@nmw/react-components",
  "version": "0.0.1",
  "description": "react components - working towards everything you'll ever need",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/cjs/*",
    "dist/esm/*",
    "dist/*.ts",
    "dist/*.css*"
  ],
  "scripts": {
    "clean": "npx rimraf dist/*",
    "build": "npm run build-tsx && npm run build-css",
    "build-tsx": "rollup -c",
    "build-css": "sass ./src/styles/main.scss ./src/styles/main.css && copyfiles -f ./src/styles/main.css* ./dist && rm ./src/styles/main.css*",
    "start": "npm run build && npm-watch",
    "format": "prettier --check \"**/*.*\"",
    "lint": "eslint . --ext tsx,ts",
    "test": "jest --passWithNoTests",
    "pre-push": "npm run lint && npm run format && npm run test"
  },
  "keywords": [
    "react"
  ],
  "author": "nathanmweller",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.1",
    "npm-watch": "^0.11.0",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.53.0",
    "type-fest": "^2.14.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "watch": {
    "build-tsx": {
      "patterns": [
        "*.tsx"
      ],
      "extensions": ".tsx"
    },
    "build-css": {
      "patterns": [
        "*.scss"
      ],
      "extensions": ".scss"
    }
  }
}
